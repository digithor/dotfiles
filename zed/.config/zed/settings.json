// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent_servers": {
    "github-copilot": {
      "type": "registry",
    },
  },
  "git_panel": {
    "tree_view": true,
  },
  "context_servers": {
    "Context7": {
      "settings": {},

      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "API_KEY",
      },
      "enabled": true,
    },
    "AWS-Knowledge": {
      "settings": {},

      "url": "https://knowledge-mcp.global.api.aws",
      "enabled": true,
    },
    "gh_grep": {
      "settings": {},

      "url": "https://mcp.grep.app",
      "enabled": true,
    },
  },
  "auto_update_extensions": {
    "harper": true,
  },
  "agent": {
    "default_model": {
      "provider": "ollama",
      "model": "glm-5:cloud",
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-haiku-4.5",
    },
    "commit_message_model": {
      "provider": "ollama",
      "model": "glm-5:cloud",
    },
    "enable_feedback": false,
  },
  "edit_predictions": {
    "provider": "copilot",
    "ollama": {
      "max_output_tokens": 256000,
      "model": "glm-5:cloud",
    },
    "sweep": {
      "privacy_mode": true,
    },
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/*.log",
      "**/secrets.yml",
    ],
    "mode": "subtle",
  },
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "soft_wrap": "editor_width",
  "show_whitespaces": "all",
  "theme": "Catppuccin Frappé",
  "icon_theme": "Catppuccin Frappé",
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "close_position": "left",
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "background_coloring": "indent_aware",
  },
  "minimap": {
    "show": "auto",
  },
  "terminal": {
    "scrollbar": {
      "show": "system",
    },
    "copy_on_select": true,
  },
  "telemetry": {
    "metrics": false,
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true,
        },
      },
    },
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true,
      },
    },
    "terraform-ls": {
      "initialization_options": {
        "experimentalFeatures": {
          "prefillRequiredFields": true,
          "validateOnSave": true,
        },
      },
    },
  },
  "languages": {
    "Python": {
      "language_servers": ["ty", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.organizeImports.ruff",
        },
        {
          "code_action": "source.fixAll.ruff",
        },
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
    "Ruby": {
      "language_servers": ["solargraph"],
    },
    "Lua": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": ["-"],
        },
      },
    },
    "Terraform": {
      "language_servers": ["terraform-ls"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "terraform",
          "arguments": ["fmt", "-"],
        },
      },
    },
    "TOML": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "taplo",
          "arguments": ["format", "-"],
        },
      },
    },
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
      "**/values*.yaml",
    ],
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/host_vars/*.yml",
      "**/host_vars/*.yaml",
      "**/playbooks/*.yml",
      "**/playbooks/*.yaml",
      "**playbook*.yml",
      "**playbook*.yaml",
    ],
  },
}
