{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "kubectl get *": "allow",
      "kubectl describe *": "allow",
      "kubectl logs *": "allow",
      "terraform fmt": "allow",
      "terraform validate": "allow",
      "terraform plan": "allow",
      "git status": "allow",
      "git log *": "allow",
      "git diff *": "allow",
      "terraform destroy": "deny",
      "kubectl delete *": "deny",
      "rm -rf /": "deny",
      "rm -rf *": "deny",
      "*": "ask"
    },
    "skill": "ask",
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "tools": {
    "bash": true,
    "edit": true,
    "write": true,
    "webfetch": true,
    "skills*": false // Disable globally, enable per-agent
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@upstash/context7-mcp@latest",
        "--api-key",
        "YOUR_API_KEY"
      ],
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    }
  }
}
